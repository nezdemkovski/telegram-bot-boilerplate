{
  "name": "telegram-bot-boilerplate",
  "version": "1.0.0",
  "description": "Telegram Bot Boilerplate",
  "main": "src/index.js",
  "author": "Yuri Yakovlev <hi@mynameisyuri.com> (https://mynameisyuri.com/)",
  "homepage": "https://github.com/yakovlevyuri/telegram-bot-boilerplate",
  "dependencies": {
    "dotenv-cli": "^2.0.1",
    "express": "^4.17.1",
    "telegraf": "^3.32.0"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.20.4",
    "debug": "^4.1.1",
